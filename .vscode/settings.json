{
    "window.zoomLevel": 0,
    "window.doubleClickIconToClose": true,
    // terminal
    "terminal.integrated.fontSize": 13.5,
    "terminal.integrated.fontFamily": "Monaco",
    "terminal.integrated.cursorBlinking": true,
    // editor
    "editor.fontSize": 13.5,
    "editor.fontFamily": "Monaco",
    "editor.fontWeight": "normal",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "selection",
    // "editor.autoIndent": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.scrollBeyondLastLine": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.letterSpacing": 0,
    "editor.wordWrap": "on",
    "editor.renderIndentGuides": true,
    "editor.quickSuggestions": false,
    "editor.minimap.enabled": false,
    // "workbench.colorTheme": "MyMonokai",
    "workbench.iconTheme": "my-seti",
    "workbench.startupEditor": "none",
    "workbench.fontAliasing": "default",
    "workbench.tree.indent": 20,
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.colorCustomizations": {
        "tab.activeBorder": "#00d0ff",
    },
    // files
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.eol": "\n",
    // other
    "debug.console.fontSize": 16,
    "extensions.ignoreRecommendations": true,
    // discord rich presense
    "discord.detailsIdle": "{null}",
    "discord.lowerDetailsIdle": "{null}",
    "discord.lowerDetailsEditing": "in {workspace}",
    "discord.lowerDetailsDebugging": "",
    "discord.largeImageIdle": "",
    "discord.detailsDebugging": "{filename}",
    "discord.detailsEditing": "editing {filename}",
    "emmet.includeLanguages": {
        "erb": "html",
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
    },
    "[python]": {
        "editor.tabSize": 4
    },
    "[rust]": {
        "editor.tabSize": 4
    },
    "[go]": {
        "editor.tabSize": 4
    },
    "files.associations": {
        "*.ml": "ocaml",
        "*.mli": "ocaml"
    },
    "typescript.disableAutomaticTypeAcquisition": true,
    "terminal.external.linuxExec": "",
    "python.dataScience.allowUnauthorizedRemoteConnection": true,
    // vscodeVim setting
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        }
    ],
    // pylint plugin for django
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django"
    ],
    //ruby lint tool
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "rubocop": true
    },
    "ruby.format": "rubocop",
    "workbench.colorTheme": "Nord",
    "editor.suggest.hideStatusBar": false,
    "rust.all_features": true,
    // textlint
    "textlint.autoFixOnSave": true,
}
